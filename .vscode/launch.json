{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug ans.cpp",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/simuilation/PegSolitire/a.exe", // 可执行文件路径
            "args": ["<", "${workspaceFolder}/simuilation/PegSolitire/input.txt"], // 输入文件路径
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/simuilation/PegSolitire", // 工作目录
            "environment": [],
            // "externalConsole": true, // 使用外部终端
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}